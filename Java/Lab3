import java.sql.Array;
import java.util.ArrayList;
import java.util.Iterator;

public class Lab3 {

	/* Task 1 print2darray function NOT FINISHED */
	// Print 2D Array
	public static void print2Darray(int[][] myArray) {
		for (int i = 0; i < myArray.length; i++) {
			for (int j = 0; j < myArray[i].length; j++) {
				System.out.print(myArray[i][j] + " ");
			}
			System.out.println(" ");

		}

	}

	// Print Formatted 2D List
	public static void print2DList(ArrayList<ArrayList<Integer>> array) {
		for (ArrayList<Integer> alist : array) {
			System.out.println(alist);
		}
	}

	/* Task 2 Running Sum NOT FINISHED */

	public static void runnignSum2DArray(int[][] myArray, int myInt) {
